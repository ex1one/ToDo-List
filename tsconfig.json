{
  "compilerOptions": {
    "experimentalDecorators": true,
    "incremental": true,
    "target": "es2020",
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "es6",
    "jsx": "preserve"
  },
  "paths": {
    "components/*": ["./components/*"],
  },
  "exclude": [
    "./node_modules"
  ],
  "include": ["./src", "./"]
}
